<form class="ui stacked segment form" action="/category/{{category.id}}/addgame" method="POST" enctype="multipart/form-data">
  <div class="four fields">
    <div class="field">
      <label for="title">Title</label>
      <input type="text" name="title" autofocus required title = "Please include a valid Title"
      placeholder="Title">
    </div>
    <div class="field">
      <label for="developer">Developer</label>
      <input type="text" name="developer" required title = "Please include a valid developer"
      placeholder="Developer"  >
    </div>
    <div class="field">
      <label for="release">Release</label>
      <input type="date" name="release" required title = "Please include a release date"
      placeholder="Release Date">
    </div>
    <div class="field">
      <label>Image</label>
      <input placeholder="Image" type="file" name="picture" required>
    </div>
  </div>
  <button class="ui blue submit button">Add game</button>
</form>