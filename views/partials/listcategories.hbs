<div class="ui centered cards">
  {{#each categories}}
  <div class="ui card">
    <div class="image">
      <img src="{{picture}}">
    </div>
    <div class="content">
      <a class="header">{{uppercase title}}</a>
    </div>
    <div class="metadata">
      <span class="date">Created: {{formatDate date}}</span>
    </div>
    <div class="extra content">
      <a href="/category/{{id}}" class="ui inverted icon button">
        <i class="icon folder open"></i>
      </a>
      <a href="/dashboard/deletecategory/{{id}}" class="ui inverted icon button delcategory">
        <i class="icon trash"></i>
      </a>
    </div>
  </div>
  {{/each}}
</div>